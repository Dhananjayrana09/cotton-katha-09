# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# n8n Webhook URLs
N8N_BASE_URL=http://localhost:5678
N8N_EMAIL_PROCESSING_WEBHOOK=/webhook/cotton-email-processing
N8N_PAYMENT_REMINDER_WEBHOOK=/webhook/payment-reminder
N8N_CONTRACT_UPLOAD_NOTIFICATION_WEBHOOK=/webhook/contract-upload-notification
N8N_CONTRACT_APPROVE_SEND_WEBHOOK=/webhook/contract-approve-send
N8N_SALES_DRAFT_WEBHOOK=/webhook/sales-draft
N8N_SALES_CONFIRMATION_WEBHOOK=/webhook/sales-confirmation
N8N_DAILY_LOT_REMINDER_WEBHOOK=/webhook/daily-lot-reminder
N8N_LOT_ACCEPTANCE_CONFIRMATION_WEBHOOK=/webhook/lot-acceptance-confirmation

# Email Configuration (for n8n)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100